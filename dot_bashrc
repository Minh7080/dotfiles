#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '
(cat ~/.cache/wal/sequences &)

alias py="python3"
alias nv="nvim"
alias la="ls -a"

alias vi="set -o vi"
alias em="set -o emacs"

alias ccc="~/.bin/compile_and_execute_c.sh"

alias jack-in="~/.bin/ssh_UNSW/ssh_to_UNSW.sh"
alias transfer="~/.bin/ssh_UNSW/rsync_from_local_to_UNSW.sh"
alias gimme="~/.bin/ssh_UNSW/rsync_from_UNSW_to_local.sh"

export TERM='xterm-256color'
export EDITOR='nvim'
export VISUAL='nvim'

eval "$(fzf --bash)"

export TERM='xterm-direct'
export EDITOR='/usr/bin/nvim'

eval "$(starship init bash)"

#Prevent CTRL-D from closing the terminal
set -o ignoreeof
